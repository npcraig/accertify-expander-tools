{
  "manifest_version": 3,
  "name": "Accertify Expander Tools",
  "version": "0.1.1",
  "description": "Automates tasks on Accertify for efficiency.",
  "permissions": [
    "activeTab",
    "contextMenus",
    "scripting",
    "<all_urls>"
  ],
  "host_permissions": [
    "https://app01.accertify.net/*",
    "https://atlas.etsycorp.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://app01.accertify.net/maintain/interceptas/entry/transactionview/vt/*",
        "https://atlas.etsycorp.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}
